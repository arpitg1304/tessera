# Dockerfile for generating embeddings
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies including ffmpeg for video codec support
RUN apt-get update && apt-get install -y \
    git \
    libgl1 \
    libglib2.0-0 \
    ffmpeg \
    libavcodec-extra \
    libsm6 \
    libxext6 \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
# Pin numpy<2 for torch compatibility, use av instead of opencv for video reading
RUN pip install --no-cache-dir \
    "numpy<2" \
    torch==2.1.0 torchvision==0.16.0 --index-url https://download.pytorch.org/whl/cpu \
    && pip install --no-cache-dir \
    git+https://github.com/openai/CLIP.git \
    av \
    h5py \
    pillow

# Copy the scripts (relative to examples/ directory as build context)
COPY scripts/generate_lerobot_embeddings.py /app/

# Copy optional health metrics module (requires pyarrow for full functionality)
COPY scripts/health_metrics.py /app/

ENTRYPOINT ["python", "generate_lerobot_embeddings.py"]
